<h1>Make a New Figure</h1>

<label>Name</label>
<form action="/figures" method="POST">
    
    <label>Name</label><br>
    <input type="text" name="figure[name]" id="figure_name"><br>

    <h2>Landmarks</h2>
    <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %> </label>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>">
    <% end %>

    <h2>Create New Landmark</h2>
    <label>Name </label>
    <input type="text" name="landmark[name]" id="new_landmark"><br>
    <label>Year Completed </label>
    <input type="text" name="landmark[year_completed]"><br>

    <label>Titles</label>
    <% Title.all.each do |title| %>
        <label><%= title.name %> </label>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>">
    <% end %>

    <h2>Create New Title</h2>
    <label>Name </label>
    <input type="text" name="title[name]" id="new_title"><br>

    <a class="button" href="/figures">Save</a>
    <a class="button" href="/">Home</a>
    <input type="submit" value="Create New Figure">
</form>