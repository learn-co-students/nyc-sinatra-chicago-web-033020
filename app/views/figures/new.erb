<h1>Create new figure:</h1>

<form method="POST" action="/figures">
  <label for="figure_name">Name </label><br>
  <input type="text" name="figure[name]" id="figure_name"><br>
<br>
  <label for="titles">Titles </label><br>
   <% @titles.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name%><br>
   <% end %>
<br>
  <label for="new_title">Create New Title: </label><br>
  <input type="text" name="title[name]" id="new_title"><br>  
<br>
  <label for="landmarks">Landmarks </label><br>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><br>
  <% end %>
<br>
  <h3>Create New Landmark: </h3>
    <label for="new_landmark">Name: </label>
    <input type="text" name="landmark[name]" id="new_landmark"><br>
    <label for ="landmark_completed_year">Year: </label>
    <input type="text" name="landmark[year_completed]">
<br>
<br>
  <input type="submit" value="Create New Figure">
</form>