<h1>Edit Historical Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    
    <label>Name </label>
    <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name"><br>

    <h2>Landmarks</h2>
    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name %>" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %> >
    <% end %>

    <h2>Add New Landmark</h2>
    <label>Name </label>
    <input type="text" name="landmark[name]" id="new_landmark"><br>
    <label>Year Completed </label>
    <input type="text" name="landmark[year_completed]"><br>

    <label>Titles</label>
    <% Title.all.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title)%>>
    <% end %>
    <label>Add New Title </label>
    <input type="text" name="title[name]" id="new_title"><br>

    <a class="button" href="/landmarks">Landmarks</a>
    <a class="button" href="/">Home</a>
    <input type="submit" value="Edit Figure">
</form>