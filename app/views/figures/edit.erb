<h1>Update Figure</h1>

<h2>Edits for <%= @figure.name %></h2>
<form action="/figures/<%= @figure.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="figure[name]" id="figure_name"value="<%= @figure.name %>">
 
  <h3>Titles</h3>
    <% @titles.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>
    <% end %>
    <br>

  <h3>Create New Title:</h3>
    <br>
    <input type="text" name="title[name]" id="new_title">
    <br><br>

  <h3>Landmarks</h3>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><br>
    <% end %>
    <br>

  <h3>Create New Landmark:</h3>
    <br>
    <label>Name: </label><input type="text" name="landmark[name]" id="new_landmark">
    <label>Year: </label><input type="text" name="landmark[year_completed]" id="landmark_year_completed"> 
    <input type="submit" value="Edit Figure">
</form>