<h1>All Historical Figures</h1>

<table>
    <thead>
        <th>Name</th>
    </thead>
    <tbody>
        <tr>
        <% @figures.each do |figure| %>
            <td>
                <a href="/figures/<%= figure.id %>"><%= figure.name %></a>
                <ul>
                <% figure.landmarks.each do |landmark| %>
                    <li><%= landmark.name %></li>
                <% end %>
                </ul>
                <ul>
                <% figure.titles.each do |title| %>
                    <li><%= title.name %></li>
                <% end %>
                </ul>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<a class="button" href="/figures/new">Create New Figure</a>
<a class="button" href="/landmarks">View Landmarks</a>
<a class="button" href="/">Home</a>