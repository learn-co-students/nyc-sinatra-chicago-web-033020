<h2>Edit Historical Landmark</h2>

<form method="POST" action="/landmarks/<%= @landmark.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="landmark_name">Landmark name: </label><br>
  <input type="text" id="landmark_name" name="landmark[name]" value="<%= @landmark.name%>">
  <br>
  <br>
  <label for="year_completed">Year Completed: </label><br>
  <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed %>">
  <br>
  <br>
 <input type="submit" value="Edit Landmark">
</form>
  <br>
  <br>

<a class="button" href="/landmarks">Landmarks</a>
