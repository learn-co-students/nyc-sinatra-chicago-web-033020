<h1>All Historical Landmarks</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Year Completed</th>
        <tr>
    </thead>
    <tbody>
    <% @landmarks.each do |landmark| %>
        <tr>
            <td><a href="/landmarks/<%= landmark.id %>"><%= landmark.name %></a></td>
            <td><%= landmark.year_completed %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<a class="button" href="/landmarks/new">Create New Landmark</a>
<a class="button" href="/figures">View Figures</a>
<a class="button" href="/">Home</a>
